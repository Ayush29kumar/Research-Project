<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BMSIT Research Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="https://bmsit.ac.in/">
        <img src="/images/bmsit-logo.png" alt="BMSIT Logo" height="40">
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/research">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="postPaperLink">Post Paper</a>
          </li>
        </ul>
        
        <ul class="navbar-nav">
          <% if (user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                <img src="/uploads/profiles/<%= user.profilePic %>" alt="Profile" class="rounded-circle" width="32" height="32">
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="/profile/<%= user._id %>">My Profile</a></li>
                <!-- <li><a class="dropdown-item" href="/profile/papers">My Papers</a></li> -->
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <script>
    document.getElementById('postPaperLink').addEventListener('click', (event) => {
      <% if (locals.user) { %>
        // User is logged in, redirect to the post paper route
        window.location.href = '/research/post';
      <% } else { %>
        // User is not logged in, show an alert
        alert('Please log in to post a paper.');
        event.preventDefault(); // Prevent the default link action
      <% } %>
    });
  </script>
</body>
</html>
