<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Research Paper Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .pdf-container {
      border: 1px solid #ddd;
      border-radius: 5px;
      overflow: hidden;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <h1 class="mb-4">Research Paper Details</h1>

    <!-- Title -->
    <h2 class="mb-3"><%= paper.title %></h2>

    <!-- Abstract -->
    <p><strong>Abstract:</strong> <%= paper.abstract %></p>

    <!-- Category -->
    <p><strong>Category:</strong> <%= paper.category %></p>

    <!-- Primary Author -->
    <p>
      <strong>Primary Author:</strong>
      <a href="/profile/<%= paper.primaryAuthor._id %>">
        <%= paper.primaryAuthor.name %>
      </a>
      (<%= paper.primaryAuthor.department %>)
    </p>

    <!-- Co-authors -->
    <p>
      <strong>Co-authors:</strong>
      <% if (paper.coAuthors.length > 0) { %>
        <% paper.coAuthors.forEach(coAuthor => { %>
          <a href="/profile/<%= coAuthor._id %>">
            <%= coAuthor.name %>
          </a>
          (<%= coAuthor.department %>)
          <% if (coAuthor !== paper.coAuthors[paper.coAuthors.length - 1]) { %>, <% } %>
        <% }); %>
      <% } else { %>
        No co-authors listed.
      <% } %>
    </p>

    <!-- Date of Publish -->
    <p><strong>Date of Publish:</strong> <%= new Date(paper.dateOfPublish).toLocaleDateString() %></p>

    <!-- Appreciation Count -->
    <p><strong>Appreciation Count:</strong> <%= paper.appreciationCount %></p>

    <!-- PDF Viewer -->
    <h4 class="mt-4">Paper PDF:</h4>
    <div class="pdf-container" style="height: 500px;">
      <iframe src="/<%= paper.pdfPath %>" width="100%" height="100%" frameborder="0"></iframe>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
      <a href="/research" class="btn btn-secondary">Back to Research Papers</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
